# ====================================
# SUPABASE CONFIGURATION
# ====================================

# Supabase Project URL
# Get from: Supabase Dashboard → Settings → API → Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous/Public Key
# Get from: Supabase Dashboard → Settings → API → anon public
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (SERVER ONLY - Never expose to client!)
# Get from: Supabase Dashboard → Settings → API → service_role
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ====================================
# APPLICATION SETTINGS
# ====================================

# Application name (shown in UI)
NEXT_PUBLIC_APP_NAME=Task Manager

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ====================================
# SERVER CONFIGURATION (Backend only)
# ====================================

# Server port
PORT=3001

# Node environment
NODE_ENV=development

# ====================================
# FEATURE FLAGS
# ====================================

# Enable analytics (optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable debug mode (development only)
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
